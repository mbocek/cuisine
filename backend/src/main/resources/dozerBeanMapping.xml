<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<custom-converters>
			<converter type="org.cuisine.utility.converter.UserAuthenticationConverter">
				<class-a>org.cuisine.entity.UserAuthentication</class-a>
				<class-b>org.cuisine.api.dto.UserDTO</class-b>
			</converter>
			<converter type="org.cuisine.utility.converter.UserInformationConverter">
				<class-a>org.cuisine.entity.UserInformation</class-a>
				<class-b>org.cuisine.api.dto.UserInfoDTO</class-b>
			</converter>
			<converter type="org.cuisine.utility.converter.InvitationConverter">
				<class-a>org.cuisine.entity.Invitation</class-a>
				<class-b>org.cuisine.api.dto.InvitationDTO</class-b>
			</converter>
		</custom-converters>
	</configuration>
</mappings> 